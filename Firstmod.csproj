<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Enablegamedebugging>true</Enablegamedebugging>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="4.1.1"/>
    <Reference Include="StardewModdingAPI">
      <HintPath>$(GamePath)/StardewModdingAPI.dll</HintPath>
    </Reference>
    <Reference Include="StardewValley">
      <HintPath>$(GamePath)/Stardew Valley.dll</HintPath>
    </Reference>
  </ItemGroup>
  <PropertyGroup>
    <GamePath>D:/SteamLibrary/steamapps/common/Stardew Valley</GamePath> <!-- Replace with your actual game path -->
  </PropertyGroup>
</Project>

